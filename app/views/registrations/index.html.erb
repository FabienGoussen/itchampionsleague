<!-- app/views/registrations/index.html.erb -->
<h1>Registrations</h1>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Technique</th>
      <th>Vista/Collectif</th>
      <th>Physique</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= registration.player.first_name %></td>
        <td><%= registration.player.last_name %></td>
        <td><%= registration.player.technique %></td>
        <td><%= registration.player.vista_collectif %></td>
        <td><%= registration.player.physique %></td>
        <td>
          <%= form_with url: registration_path(registration), method: :delete, local: true do %>
          <%= submit_tag 'Delete', data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Registration', new_registration_path %>


<%= form_with url: create_teams_registrations_path, method: :get, local: true, class: 'form-inline' do |form| %>
  <div class="form-group">
    <%= form.label :team_size, "Team size" %>
    <%= form.number_field :team_size, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= form.submit "Create Teams", class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to 'New Registration', new_registration_path, class: 'btn btn-primary' %>
<%= link_to 'Back', players_path, class: 'btn btn-secondary' %>

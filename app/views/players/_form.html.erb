<%= form_with(model: @player, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :technique %>
    <%= form.number_field :technique, step: 0.01, min: 0, max: 5, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :vista_collectif %>
    <%= form.number_field :vista_collectif, step: 0.01, min: 0, max: 5, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :physique %>
    <%= form.number_field :physique, step: 0.01, min: 0, max: 5, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Player', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', players_path, class: 'btn btn-secondary' %>

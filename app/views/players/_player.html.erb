<div id="<%= dom_id player %>">
  <p>
    <strong>First name:</strong>
    <%= player.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= player.last_name %>
  </p>

  <p>
    <strong>Avatar:</strong>
    <%= player.avatar %>
  </p>

  <p>
    <strong>Attack:</strong>
    <%= player.attack %>
  </p>

  <p>
    <strong>Defense:</strong>
    <%= player.defense %>
  </p>

  <p>
    <strong>Vista:</strong>
    <%= player.vista %>
  </p>

  <p>
    <strong>Endurance:</strong>
    <%= player.endurance %>
  </p>

</div>
